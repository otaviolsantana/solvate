#!/bin/bash

# Initialize configurations

source solvate.profile

# Instaling dependencies

$HOME_SOLVATE/nodes/packmol/packmol.install
$HOME_SOLVATE/nodes/qforce/qforce.install

# Configuring dependencies

mkdir -p $HOME_SOLVATE/suite

rm -rf $HOME_SOLVATE/suite/g09     ; ln -sf $HOME_PROGRAM/g09     $HOME_SOLVATE/suite/g09
rm -rf $HOME_SOLVATE/suite/gv5     ; ln -sf $HOME_PROGRAM/gv5     $HOME_SOLVATE/suite/gv5
rm -rf $HOME_SOLVATE/suite/orca    ; ln -sf $HOME_PROGRAM/orca    $HOME_SOLVATE/suite/orca
rm -rf $HOME_SOLVATE/suite/xtb     ; ln -sf $HOME_PROGRAM/xtb     $HOME_SOLVATE/suite/xtb
rm -rf $HOME_SOLVATE/suite/gmx     ; ln -sf $HOME_PROGRAM/gmx     $HOME_SOLVATE/suite/gmx
rm -rf $HOME_SOLVATE/suite/vmd     ; ln -sf $HOME_PROGRAM/vmd     $HOME_SOLVATE/suite/vmd
rm -rf $HOME_SOLVATE/suite/packmol ; ln -sf $HOME_PROGRAM/packmol $HOME_SOLVATE/suite/packmol
rm -rf $HOME_SOLVATE/suite/qforce  ; ln -sf $HOME_PROGRAM/qforce  $HOME_SOLVATE/suite/qforce

