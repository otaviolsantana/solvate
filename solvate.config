# SOLVATE + Definitions

export HOME_SOLVATE=~/.bin/solvate
export HOME_PROGRAM=/opt/chemprogs
export PATH=$PATH:$HOME_SOLVATE:$HOME_SOLVATE/modules:$HOME_SOLVATE/suite

# Initialize configurations

source $HOME_SOLVATE/solvate.profile

# Adjusting dependencies

cd $HOME_SOLVATE/ && chmod +x solvate* modules/* $HOME_SOLVATE/nodes/packmol/packmol.install $HOME_SOLVATE/nodes/qforce/qforce.install

