#!/bin/bash
#
# xTB 6.5.0 profile script.
#

if [ -d $HOME_SOLVATE/suite/xtb ]; then
   XTBHOME=$HOME_SOLVATE/suite/xtb
   BINHOME=$XTBHOME/bin
   LIBHOME=$XTBHOME/lib
   MANHOME=$XTBHOME/man
   SHRHOME=$XTBHOME/share
   PYSHOME=$XTBHOME/python

   XTBPATH=$HOME:$XTBHOME:$BINHOME:$LIBHOME:$MANHOME:$SHRHOME:$PYSHOME:$MANPATH
   PYTHONPATH=$PYSHOME
   PKG_CONFIG_PATH=${PKG_CONFIG_PATH}:${XTBHOME}/share

   export PATH=$PATH:$XTBPATH:$MANPATH
   export MANPATH=$PATH:$XTBPATH:$MANPATH
   export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$LIBHOME

   ulimit -s unlimited
fi
